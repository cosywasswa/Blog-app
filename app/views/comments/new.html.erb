<h1>Add a Comment</h1>

<%= form_with(model: [@post, @comment], url: user_post_comments_path) do |form| %>
  <div class="comment-field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <div class="comment-actions">
    <%= form.submit 'Create Comment', class:"comm-btn" %>
  </div>
<% end %>