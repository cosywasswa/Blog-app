<div class="posts-details">
<h2><%= link_to "Post ##{post.id}", user_post_url(@user.id, post.id) %></h2>
<h3><%= post.title %></h3>
<h3><%= post.text %></h3>
<% if can? :destroy, post %>
    <%= button_to "Delete post", user_post_path(@user, post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-post-btn' %>
  <% end %>
<p>Comments:<%= post.comments_counter %>,Likes:<%= post.likes.size %></p>
</div>